{
  "$schema": "https://playground.wordpress.net/blueprint-schema.json",
  "landingPage": "/products-layout-demo/",
  "preferredVersions": {
    "php": "8.4",
    "wp": "latest"
  },
  "features": {
    "networking": true
  },
  "extraLibraries": [
    "wp-cli"
  ],
  "plugins": [
    "wordpress-importer",
    "woocommerce",
	"wpzoom-video-popup-block",
    "https://raw.githubusercontent.com/Micemade/playground/main/releases/mosaic-product-layouts-v1.0.2.zip"
  ],
  "steps": [
    {
      "step": "login"
    },
    {
      "step": "writeFile",
      "path": "/wordpress/wp-content/mu-plugins/rewrite.php",
      "data": "<?php /* Use pretty permalinks*/ add_action( 'after_setup_theme', function() { global $wp_rewrite; $wp_rewrite->set_permalink_structure('/%postname%/'); $wp_rewrite->flush_rules(); } );"
    },
    {
      "step": "installTheme",
      "themeData": {
        "resource": "wordpress.org/themes",
        "slug": "ollie"
      },
      "options": {
        "activate": true
      }
    },
    {
      "step": "runPHP",
      "code": "<?php include 'wordpress/wp-load.php'; delete_transient( '_wc_activation_redirect' );"
    },
    {
      "step": "setSiteOptions",
      "options": {
        "blogname": "MPL playground",
        "woocommerce_store_city": "Rijeka",
        "woocommerce_store_address": "123 Main Street",
        "woocommerce_store_postcode": "51000",
        "woocommerce_default_country": "HR:HR-08",
        "woocommerce_onboarding_profile": {
          "skipped": true
        },
        "woocommerce_currency": "EUR",
        "woocommerce_weight_unit": "kg",
        "woocommerce_dimension_unit": "cm",
        "woocommerce_allow_tracking": "no",
        "woocommerce_cheque_settings": {
          "enabled": "yes"
        }
      }
    },
    {
      "step": "importWxr",
      "file": {
        "resource": "url",
        "url": "https://raw.githubusercontent.com/Micemade/playground/main/WXR-imports/mpl-playground.xml"
      }
    }
  ],
  "login": true
}
